<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AdvancedToDoList.ViewModels"
             xmlns:services="clr-namespace:SharedControls.Services;assembly=SharedControls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             services:DialogManager.Register="{Binding}"
             x:DataType="viewModels:ToDoItemsViewModel"
             x:Class="AdvancedToDoList.Views.ManageToDoItemsView">
    <DockPanel VerticalSpacing="5" >
        <Border DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Button Command="{Binding AddNewToDoItemCommand}" Content="New Item" />
                <Button Command="{Binding EditToDoItemCommand}" Content="Edit Item"
                        CommandParameter="{Binding SelectedToDoItem}"/>
                <Button Command="{Binding DeleteToDoItemCommand}" Content="Delete Item"
                        CommandParameter="{Binding SelectedToDoItem}"/>
            </StackPanel>
        </Border>
        
        <ListBox ItemsSource="{Binding ToDoItems}"
                 SelectedItem="{Binding SelectedToDoItem}" />
    </DockPanel>
</UserControl>
