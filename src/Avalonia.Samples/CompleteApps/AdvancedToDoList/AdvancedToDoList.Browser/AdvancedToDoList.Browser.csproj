<Project Sdk="Microsoft.NET.Sdk.WebAssembly">
  <PropertyGroup>
    <TargetFramework>net10.0-browser</TargetFramework>
    <OutputType>Exe</OutputType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>

    <PublishTrimmed>false</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.Browser" />
    <!-- Use WASM-safe SQLite provider/lib and exclude native e_sqlite3 -->
    <PackageReference Include="SQLitePCLRaw.provider.sqlite3" />
    <!-- Hard-exclude any native e_sqlite3 providers/bundles/libs that may flow transitively -->
    <PackageReference Include="SQLitePCLRaw.bundle_e_sqlite3" ExcludeAssets="all" />
    <PackageReference Include="SQLitePCLRaw.lib.e_sqlite3" ExcludeAssets="all" />
    <PackageReference Include="SQLitePCLRaw.provider.e_sqlite3" ExcludeAssets="all" />
    <!-- sqlite-net-pcl often brings bundle_green; exclude it as well on WASM -->
    <PackageReference Include="SQLitePCLRaw.bundle_green" ExcludeAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AdvancedToDoList\AdvancedToDoList.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Services\" />
  </ItemGroup>
</Project>
