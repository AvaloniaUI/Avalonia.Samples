<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:DialogManagerSample"
             xmlns:viewModels="clr-namespace:DialogManagerSample.ViewModels"
             xmlns:views="clr-namespace:DialogManagerSample.Views"
             RequestedThemeVariant="Light"
             x:Class="DialogManagerSample.App">

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
    
    <Application.DataTemplates>
        <!-- Register global data template for input dialog -->
        <DataTemplate DataType="viewModels:InputDialogViewModel">
            <views:InputDialogView />
        </DataTemplate>
    </Application.DataTemplates>
</Application>
