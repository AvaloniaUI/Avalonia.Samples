<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MvvmDialogSample.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MvvmDialogSample.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
		x:DataType="vm:MainWindowViewModel"
		x:CompileBindings="true"
        Title="MvvmDialogSample">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Button Content="{Binding InteractionSample.SampleText}" 
			Command="{Binding InteractionSample.SelectFileCommand}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

</Window>
